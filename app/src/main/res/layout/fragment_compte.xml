<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whit"
    tools:context=".CompteFragment">

    <!-- Top Layout with Title and Image -->
    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/bordure">

        <!-- Image on the left -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:src="@drawable/retour"
            android:contentDescription="Logo" />

        <!-- Title on the right -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="16dp"
            android:text="Gestion des Comptes"
            android:textColor="@color/color3"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordure"
        android:orientation="vertical"
        android:layout_marginTop="90dp"
        android:padding="30dp">

        <Button
            android:id="@+id/btn_creer_compte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blac"
            android:background="@drawable/bouton_back"
            android:text="Créer Compte" />

        <Button
            android:id="@+id/btn_supprimer_compte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/blac"
            android:background="@drawable/bouton_back"
            android:text="Supprimer Compte" />

        <Button
            android:id="@+id/btn_attribuer_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/blac"
            android:background="@drawable/bouton_back"
            android:text="Attribuer Rôle" />

        <!-- Formulaire de création de compte -->
        <LinearLayout
            android:id="@+id/layout_creer_compte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordure"
            android:orientation="vertical"
            android:padding="60dp"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/blac"
                android:hint="Username" />

            <EditText
                android:id="@+id/et_email_creer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/blac"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/blac"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/blac"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btn_creer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blac"
                android:layout_marginTop="10dp"
                android:background="@drawable/bouton_back"
                android:text="Créer" />
        </LinearLayout>

        <!-- Formulaire de suppression de compte -->
        <LinearLayout
            android:id="@+id/layout_supprimer_compte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bordure"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_email_supprimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/blac"
                android:inputType="textEmailAddress" />

            <Button
                android:id="@+id/btn_supprimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blac"
                android:layout_marginTop="10dp"
                android:background="@drawable/bouton_back"
                android:text="Supprimer" />
        </LinearLayout>

        <!-- Formulaire d'attribution de rôle -->
        <LinearLayout
            android:id="@+id/layout_attribuer_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bordure"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_email_role"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/blac"
                android:inputType="textEmailAddress" />

            <Spinner
                android:id="@+id/roleSpinner"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:importantForAccessibility="yes"
                android:importantForAutofill="yes"
                android:minHeight="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/blac"
                android:padding="16dp" />


            <Button
                android:id="@+id/btn_sauvegarder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blac"
                android:layout_marginTop="10dp"
                android:background="@drawable/bouton_back"
                android:text="Sauvegarder" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>